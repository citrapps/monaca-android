<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme -->
    <style name="Theme.Monaca.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Light Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Light Navigation Bar. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Background -->
        <item name="android:windowBackground">@drawable/screen_splash</item>
    </style>
    <!-- Base Application Theme -->
    <style name="Theme.Monaca" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Light Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Remove Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Light Navigation Bar. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Primary Brand Color. -->
        <item name="colorPrimary">@color/rosy_highlight</item>
        <item name="colorPrimaryVariant">@color/summer_time</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary Brand Color -->
        <item name="colorSecondary">@color/rosy_highlight</item>
        <item name="colorSecondaryVariant">@color/summer_time</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize Your Theme Here -->
    </style>
</resources>
