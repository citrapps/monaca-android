<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material TextInputLayout Customization for Monaca Sign In -->
    <style name="Widget.Monaca.MaterialComponents.TextInputLayout.FilledBox.SignIn" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCollapsedPaddingTop">6dp</item>
        <item name="boxStrokeColor">@color/shadowed_steel</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor">@color/shadowed_steel</item>
    </style>
    <!-- Material TextInputEditText Customization for Monaca Sign In -->
    <style name="ThemeOverlay.Monaca.MaterialComponents.TextInputEditText.SignIn" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor_text_input_edit_text</item>
        <item name="colorControlActivated">@color/shadowed_steel</item>
    </style>
    <!-- Material TextButton Rounded for Monaca -->
    <style name="Widget.Monaca.MaterialComponents.Button.TextButton.Rounded" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
    <!-- Material Social Sign In OutlinedButton Customization for Monaca -->
    <style name="Widget.Monaca.MaterialComponents.Button.TextButton.SignInWithSocialAccount" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
</resources>
